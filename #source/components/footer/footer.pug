include ../field/field

mixin footer(theme, navigations = [])
	if theme === "full"
		footer.footer.footer-full
			div.footer__container.container
				nav.footer__panels.panel
					div.panel__about-panel
						a.panel__logo.logo
							img(src="img/LOGO/logo_icon.svg").logo__image
							img(src="img/LOGO/logo_text.svg").logo__text
						p.panel__awards Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
					each panel in navigations
						ul.panel__navigations
							h1.title__panel= panel.title
							each item in panel.items
								li.panel__item 
									a.panel__link(href= `${item.href}`)= item.title
					ul.panel__navigations
						h1.title__panel Подписка
						li.panel__item Получайте специальные предложения и новости сервиса
						li.panel__field-email
							+field({
							theme: "dropdown-arrow", 
							value: "Email",
							href: "#"
							})
			div.footer__bottom
				div.footer__bottom-container.container
					p.footer__requisites Copyright © 2018 Toxin отель. Все права зачищены.
					div.footer__social-net
						a.footer__link(href= "#")
							img(src= "../../../img/INTERFACE/social_net/twitter.svg")
						a.footer__link(href= "#")
							img(src= "../../../img/INTERFACE/social_net/facebook.svg")
						a.footer__link(href= "#")
							img(src= "../../../img/INTERFACE/social_net/instagram.svg")
	else if theme === "pur"
		footer.footer.footer-card
			div.footer-card__info
				a.footer-card__logo.logo(href="#")
					img(src="img/LOGO/Logo.svg")
				p.footer-card__awards Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
				p.footer__requisites Copyright © 2018 Toxin отель. Все права зачищены.
				div.footer-card__social-net
					a.footer__link(href= "#")
								img(src= "../../../img/INTERFACE/social_net/twitter.svg")
					a.footer__link(href= "#")
								img(src= "../../../img/INTERFACE/social_net/facebook.svg")
					a.footer__link(href= "#")
								img(src= "../../../img/INTERFACE/social_net/instagram.svg")